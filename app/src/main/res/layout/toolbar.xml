<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:fitsSystemWindows="true"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bpm_sort_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:lines="2"
            android:text="Beat per min"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/most_played_sort_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:lines="2"
            android:text="most played"
            android:layout_weight="1"/>
        <!--<Button-->
            <!--android:id="@+id/new_relase_sort_button"-->
            <!--android:layout_width="0dp"-->
            <!--android:text="new release"-->
            <!--android:lines="2"-->
            <!--android:layout_height="70dp"-->
            <!--android:layout_weight="1"/>-->
        <Button
            android:id="@+id/most_commented_sort_button"
            android:layout_width="0dp"
            android:text="most commented"
            android:lines="2"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.v7.widget.Toolbar>